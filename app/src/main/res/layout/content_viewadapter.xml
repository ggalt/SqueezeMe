<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="top|center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/coverImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:contentDescription="buttomImage"
        android:src="@mipmap/ic_artist"
        android:longClickable="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/coverImage"
        android:text="Title Info"
        android:textSize="18sp"
        android:id="@+id/txtLabel"
        android:paddingStart="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="subtitle"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/coverImage"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/coverImage"
        android:paddingStart="5dp" />

</RelativeLayout>